<div class="container mt-5">

<h2 class="name mb-4"><%= @restaurant.name%></h2>
<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%=@restaurant.phone_number%></p>
<p>Cuisine: <%= @restaurant.category%></p>

<p><strong>Reviews</strong></p>

<%= link_to new_restaurant_review_path(@restaurant) do %>
    <i class="fa-solid fa-plus"></i> Add a new Review
  <% end %>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= review.rating %></li>
  <% end %>
</ul>

<br>

</div>
